<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProfilFragment">

    <!-- Mevcut E-posta Adresi Gösterimi -->
    <TextView
        android:id="@+id/currentEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mevcut E-posta: mevcut-email@domain.com"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Yeni E-posta Giriş Alanı -->
    <EditText
        android:id="@+id/newEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Yeni E-posta"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/currentEmailTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- E-posta Güncelleme Butonu -->
    <Button
        android:id="@+id/updateEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-posta Güncelle"
        app:layout_constraintTop_toBottomOf="@id/newEmailEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Şifre sıfırlama butonu -->
    <Button
        android:id="@+id/forgotPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifremi Unuttum"
        app:layout_constraintTop_toBottomOf="@id/updateEmailButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
